// CDN(ブラウザ向け)のビルド設定
{
  "compilerOptions": {
    "target": "ES2015",                       // ES2015向けのコードを出す
    "outDir": "./dist",                       // 出力先
    "declaration": true,                      // 型定義ファイルはここで出す
    "forceConsistentCasingInFileNames": true, // ファイル名の大文字小文字は区別する
    "esModuleInterop": true,                  // commonJSのモジュールもimportで読めるようにする
    "strict": true,                           // 厳密オプション
    "lib": ["ES2015", "DOM"],                 // DOMを使うライブラリなので
  },
  "include": [
    "./src"                                   // 必要なファイルだけを指定
  ]
}